<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="TOP_CENTER" maxHeight="640.0" maxWidth="360.0" minHeight="640.0" minWidth="360.0" prefHeight="640.0" prefWidth="360.0" spacing="50.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.ChooseModeController">
   <children>
      <Pane maxHeight="100.0" maxWidth="360.0" minHeight="100.0" minWidth="360.0" prefHeight="100.0" prefWidth="360.0" />
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Choose game mode">
         <font>
            <Font name="Montserrat Regular" size="30.0" />
         </font>
      </Text>
      <Button fx:id="bttnPvP" alignment="CENTER" maxHeight="70.0" maxWidth="200.0" minHeight="70.0" minWidth="200.0" mnemonicParsing="false" onMouseClicked="#bttnPvPClicked" prefHeight="70.0" prefWidth="200.0" text="PvP" textAlignment="CENTER">
         <font>
            <Font name="Montserrat Regular" size="30.0" />
         </font>
      </Button>
      <Button fx:id="bttnPvE" alignment="CENTER" maxHeight="70.0" maxWidth="200.0" minHeight="70.0" minWidth="200.0" mnemonicParsing="false" onMouseClicked="#bttnPvEClicked" prefHeight="70.0" prefWidth="200.0" text="PvE" textAlignment="CENTER">
         <font>
            <Font name="Montserrat Regular" size="30.0" />
         </font>
      </Button>
      <Button fx:id="bttnEvE" alignment="CENTER" maxHeight="70.0" maxWidth="200.0" minHeight="70.0" minWidth="200.0" mnemonicParsing="false" onMouseClicked="#bttnEvEClicked" prefHeight="70.0" prefWidth="200.0" text="EvE" textAlignment="CENTER">
         <font>
            <Font name="Montserrat Regular" size="30.0" />
         </font>
      </Button>
   </children>
</VBox>
